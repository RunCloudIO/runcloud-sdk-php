{
  "name": "runcloudio/php-api-sdk",
  "description": "PHP SDK for RunCloud API",
  "type": "library",
  "minimum-stability": "dev",
  "require": {
    "php": "<9",
    "guzzlehttp/guzzle": "6.*|7.*",
    "illuminate/support": "*"
  },
  "license": "Copyright RunCloud",
  "autoload": {
    "psr-4": {
      "RunCloudIO\\PHPApiSDK\\": "src/"
    }
  },
  "require-dev": {
    "php-http/curl-client": "^2.0@dev",
    "laminas/laminas-diactoros": "2.17.x-dev",
    "phpunit/phpunit": "9.6.x-dev"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
